{% extends 'base.jinja2' %}

{% block subtitle %}Record New Donation{% endblock subtitle %}

{% block content %}

<form method="POST">

    {% if error %}<span class='error'>{{ error }}<br>{% endif %}

    <label for="donor">Donor Name: </label><input type="text" id="donor" name="donor">
    <label for="donation">Donation Amount: </label><input type="text" id="donation" name="donation">
    <input type="submit" value="Record Donation">
</form>

{% endblock content %}
